<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slloan.dao.spousesOfBorrowersDao">
	<resultMap type="com.slloan.entity.SpousesOfBorrowers" id="spousesofb">
		<result column="name" property="name" />
		<result column="id_Type" property="id_Type" />
		<result column="id_Number" property="id_Number" />
		<result column="uni_Name" property="uni_Name" />
		<result column="unit_Phone" property="unit_Phone" />
		<result column="home_Phone" property="home_Phone" />
		<result column="mobile_Phone" property="mobile_Phone" />
		<result column="monthly_Income" property="monthly_Income" />
		<result column="state" property="state" />
		<result column="ctime" property="ctime" />
	</resultMap>

	<insert id="save" parameterType="com.slloan.entity.SpousesOfBorrowers">  
        insert into borrower_spouse(
     name,					
	 id_Type,       			
	 id_Number,					
	 uni_Name,						
	 unit_Phone,				
	 home_Phone,			
	 mobile_Phone,					
	 monthly_Income,			
	 state,
	 ctime) values(#{name},							
	 #{id_Type},          			
	 #{id_Number},					
	 #{uni_Name},						
	 #{unit_Phone},					
	 #{home_Phone},					
	 #{mobile_Phone},					
	 #{monthly_Income},			
	 #{state},
	 #{ctime})
    </insert>  
